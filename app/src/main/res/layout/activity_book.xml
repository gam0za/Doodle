<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/basicbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/book_titlebar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_bold"
                android:text="글적서적"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <View
        android:layout_marginTop="2dp"
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <ScrollView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="5dp"
            android:src="@drawable/book1_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/nanum_bold"
                android:text="2019년 상반기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:text="출간 준비중"
                    android:fontFamily="@font/nanum_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:textColor="#000000"
                android:text="글적 제 1권"
                android:fontFamily="@font/nanum_bold"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="10sp"
                        android:text="지은이"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="10sp"
                        android:text="'오늘의 시인' 99명의 글적 작가들"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="10sp"
                        android:text="출판사"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="10sp"
                        android:text="준비중"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="10sp"
                        android:text="가격   "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="10sp"
                        android:text="준비중"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/book_layout_book"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:background="@color/maincolor"
                    android:layout_width="130dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:background="@drawable/frame_white"
                        android:layout_width="126dp"
                        android:layout_height="36dp" />
                    <TextView
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="#ffffff"
                        android:text="보러가기"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
</layout>