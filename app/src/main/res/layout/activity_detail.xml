<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/basicbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/detail_titlebar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_bold"
                android:text="글 상세보기"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <View
        android:layout_marginTop="2dp"
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/detail_img_image"
            android:src="@drawable/writingbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/detail_img_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#80000000"
                    android:id="@+id/detail_text_like"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/nanum"
                    android:text="공감"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#80000000"
                    android:id="@+id/detail_text_likecount"
                    android:fontFamily="@font/nanum"
                    android:text="2.4천"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#80000000"
                    android:id="@+id/detail_text_comment"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/nanum"
                    android:text="댓글"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#80000000"
                    android:id="@+id/detail_text_commentcount"
                    android:fontFamily="@font/nanum"
                    android:text="320"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#80000000"
                    android:id="@+id/detail_text_scrap"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/nanum"
                    android:text="담아감"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#80000000"
                    android:id="@+id/detail_text_scrapcount"
                    android:fontFamily="@font/nanum"
                    android:text="2.4천"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/detail_text_writer"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/maincolor"
                android:text="간지감자"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
</layout>