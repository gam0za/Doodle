<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@drawable/myfeedbg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/other_titlebar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>
        <View
            android:background="#60000000"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <View
            android:layout_marginTop="2dp"
            android:background="#60000000"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center"
                    android:background="@drawable/frame2"
                    android:layout_width="88dp"
                    android:layout_height="88dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/other_img_profile"
                        android:layout_width="83dp"
                        android:layout_height="83dp" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/other_text_nickname"
                        android:text=""
                        android:textColor="#000000"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:text="감성"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/other_text_writecount"
                            android:layout_marginLeft="3dp"
                            android:textSize="13sp"
                            android:text="97"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:text="담아감"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nanum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/other_text_scrapcount"
                            android:layout_marginLeft="3dp"
                            android:textSize="13sp"
                            android:text="130"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nanum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/other_text_info"
                    android:layout_marginLeft="3dp"
                    android:text="새벽 두시의 감성을 담아"
                    android:textSize="13sp"
                    android:fontFamily="@font/nanum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/myfeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/other_recyclerview"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>
</layout>