<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:background="@drawable/myfeedbg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/profile_titlebar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_bold"
                android:text="프로필 수정"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:clickable="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/profile_text_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/nanum_bold"
            android:text="완료"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <View
        android:layout_marginTop="2dp"
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/frame"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <RelativeLayout
                android:background="@drawable/frame"
                android:layout_centerInParent="true"
                android:layout_width="115dp"
                android:layout_height="115dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/profile_img_profile"
                    android:src="@drawable/profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/profile_text_change"
            android:padding="10dp"
            android:text="사진 변경"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/nanum_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="나의 한 줄"
            android:fontFamily="@font/nanum_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="13sp"
            android:textColor="#80000000"
            android:id="@+id/profile_edit_description"
            android:fontFamily="@font/nanum_bold"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="2dp"
            android:background="#60000000"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
    </LinearLayout>
</LinearLayout>
</layout>