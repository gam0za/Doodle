<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/basicbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/setting_titlebar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_bold"
                android:text="설정"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <View
        android:layout_marginTop="2dp"
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setting_text_license"
            android:text="라이센스"
            android:fontFamily="@font/nanum_bold"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/setting_text_changepw"
            android:layout_marginTop="10dp"
            android:text="비밀번호 변경"
            android:fontFamily="@font/nanum_bold"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="알림 설정"
                android:fontFamily="@font/nanum_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:text="공감, 댓글, 담아가기 소식을 알려드립니다."
                android:fontFamily="@font/nanum_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Switch
            android:id="@+id/setting_switch_alarm"
            android:checked="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
    android:layout_marginTop="30dp"
    android:background="#60000000"
    android:layout_width="match_parent"
    android:layout_height="0.8dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setting_text_send"
            android:text="의견 보내기"
            android:fontFamily="@font/nanum_bold"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/setting_text_law"
            android:layout_marginTop="10dp"
            android:text="이용약관 및 개인정보 취급방침"
            android:fontFamily="@font/nanum_bold"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginTop="30dp"
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setting_text_logout"
            android:text="로그아웃"
            android:fontFamily="@font/nanum_bold"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/setting_text_secession"
            android:layout_marginTop="10dp"
            android:text="계정 탈퇴"
            android:fontFamily="@font/nanum_bold"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
</layout>