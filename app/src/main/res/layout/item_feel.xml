<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/item_feel_img_rank"
        android:layout_marginBottom="10dp"
        android:src="@drawable/rank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_feel_img_image"
        android:src="@drawable/writingbg"
        android:layout_below="@+id/item_feel_img_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/item_feel_img_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#80000000"
                android:id="@+id/item_feel_text_like"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/nanum"
                android:text="공감"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#80000000"
                android:id="@+id/item_feel_text_likecount"
                android:fontFamily="@font/nanum"
                android:text="2.4천"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#80000000"
                android:id="@+id/item_feel_text_comment"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/nanum"
                android:text="댓글"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#80000000"
                android:id="@+id/item_feel_text_commentcount"
                android:fontFamily="@font/nanum"
                android:text="320"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#80000000"
                android:id="@+id/item_feel_text_scrap"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/nanum"
                android:text="담아감"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#80000000"
                android:id="@+id/item_feel_text_scrapcount"
                android:fontFamily="@font/nanum"
                android:text="2.4천"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_feel_text_writer"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/maincolor"
            android:text="간지감자"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
</layout>